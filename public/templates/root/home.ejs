<%- include('../common/header.ejs') %>
<div class="d-sm-flex justify-content-between align-items-center mb-4">
    <h3 class="text-dark mb-0">Dashboard</h3>
</div>
<div class="row">
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card shadow border-start-primary py-2 bg-success">
            <div class="card-body">
                <div class="row align-items-center no-gutters">
                    <div class="col me-2">
                        <div class="text-uppercase text-white fw-bold text-xs mb-1"><span>Total
                                Students</span></div>
                        <div class="text-white fw-bold h5 mb-0"><span><%= studentCount %></span></div>
                    </div>
                    <div class="col-auto"><i class="bi bi-person fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card shadow border-start-warning py-2 bg-danger ">
            <div class="card-body">
                <div class="row align-items-center no-gutters">
                    <div class="col me-2">
                        <div class="text-uppercase text-white fw-bold text-xs mb-1"><span>Pending
                                Students</span></div>
                        <div class="text-white fw-bold h5 mb-0"><span><%= pendingStudentCount %></span></div>
                    </div>
                    <div class="col-auto"><i class="bi bi-person-add fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card shadow border-start-success py-2 bg-primary">
            <div class="card-body">
                <div class="row align-items-center no-gutters">
                    <div class="col me-2">
                        <div class="text-uppercase text-white fw-bold text-xs mb-1"><span>Total
                                HOD's</span></div>
                        <div class="text-white fw-bold h5 mb-0"><span><%= hodCount %></span></div>
                    </div>
                    <div class="col-auto"><i class="bi bi-person-badge fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="card shadow border-start-success py-2 bg-black">
            <div class="card-body">
                <div class="row align-items-center no-gutters">
                    <div class="col me-2">
                        <div class="text-uppercase text-white fw-bold text-xs mb-1"><span>Total
                                Teachers</span></div>
                        <div class="text-white fw-bold h5 mb-0"><span><%= teacherCount %></span></div>
                    </div>
                    <div class="col-auto"><i class="bi bi-person-badge fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const driver = window.driver.js.driver;

    // Generate descriptions dynamically
    const descriptions = [
        { title: 'Dashboard', description: 'Overview of your application data and statistics' },
        { title: 'Menu', description: 'Navigation menu for accessing different sections of the application' }
    ];

    const steps = descriptions.map((desc, index) => ({
        element: index === 0 ? '#home' : '.sidebar', // Use different elements for each step
        popover: desc
    }));

    const driverObj = driver({
        showProgress: true,
        steps: steps
    });

    // Only show the driver once
    if (!localStorage.getItem('driverShown')) {
        driverObj.drive();
        localStorage.setItem('driverShown', 'true');
    }

</script>
<%- include('../common/footer.ejs') %>